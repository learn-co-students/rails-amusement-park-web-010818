


<p>Name: <%= @attraction.name %></p>
<p>Total of Users: <%= @attraction.rides.size %></p>
<p>Ticket Requirement: <%= @attraction.tickets %></p>
<p>Height Requirement: <%= pluralize @attraction.min_height, 'inch' %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>

<% if current_user.admin %>
  <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% else %>
  <form action="<%= rides_path %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="ride[attraction_id]" value="<%= @attraction.id %>">
    <input type="hidden" name="ride[user_id]" value="<%= current_user.id %>">
    <input type="submit" value="Go on this ride">
  </form>
<% end %>
